<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="400.0" styleClass="white-bg" stylesheets="@designsigninup.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modelview.SignupController">
   <center>
      <VBox alignment="CENTER" maxWidth="-Infinity" prefWidth="250.0" spacing="20.0" stylesheets="@designsigninup.css" BorderPane.alignment="CENTER">
         <children>
            <Text fill="#299e94" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign Up">
               <font>
                  <Font name="Broadway" size="24.0" />
               </font>
            </Text>
            <TextField fx:id="textname" promptText="Name" styleClass="textfield" stylesheets="@designsigninup.css" />
            <TextField fx:id="textemail" promptText="Email" styleClass="textfield" stylesheets="@designsigninup.css" />
            <TextField fx:id="textusername" promptText="username" styleClass="textfield" />
            <PasswordField fx:id="pass1" promptText="password" styleClass="textfield" stylesheets="@designsigninup.css" />
            <PasswordField fx:id="pass2" promptText="confirm password" styleClass="textfield" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="button_signIn" mnemonicParsing="false" onAction="#handleButton_signIn" styleClass="btn" stylesheets="@designsigninup.css" text="Sign In" />
                  <Button fx:id="button_signUp" mnemonicParsing="false" onAction="#handleButton_signUp" styleClass="btn" stylesheets="@designsigninup.css" text="SignUp" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
